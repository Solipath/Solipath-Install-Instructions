{
	"downloads": [
		{
			"url": "https://github.com/helix-editor/helix/releases/download/${version}/helix-${version}-x86_64-linux.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "linux", "arch": "x86_64"}]
		},
		{
			"url": "https://github.com/helix-editor/helix/releases/download/${version}/helix-${version}-aarch64-linux.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "linux", "arch": "aarch64"}]
		},
		{
			"url": "https://github.com/helix-editor/helix/releases/download/${version}/helix-${version}-x86_64-windows.zip",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "windows", "arch": "x86_64"}]
    	},
		{
			"url": "https://github.com/helix-editor/helix/releases/download/${version}/helix-${version}-x86_64-macos.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "macos", "arch": "x86_64"}]
		},
		{
			"url": "https://github.com/helix-editor/helix/releases/download/${version}/helix-${version}-aarch64-macos.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "macos", "arch": "aarch64"}]
		}
	],
	"environment_variables": [
		{"name": "PATH", "relative_path": "${version}/helix-${version}-x86_64-linux", "platform_filters": [{"os": "linux", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/helix-${version}-aarch64-linux", "platform_filters": [{"os": "linux", "arch": "aarch64"}]},
		{"name": "PATH", "relative_path": "${version}/helix-${version}-x86_64-windows", "platform_filters": [{"os": "windows", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/helix-${version}-x86_64-macos", "platform_filters": [{"os": "macos", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/helix-${version}-aarch64-macos", "platform_filters": [{"os": "macos", "arch": "aarch64"}]}
	]
}
