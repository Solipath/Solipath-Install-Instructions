{
	"downloads": [
		{
			"url": "https://nodejs.org/dist/v${version}/node-v${version}-linux-x64.tar.gz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "linux", "arch": "x86_64"}]
		},
		{
			"url": "https://nodejs.org/dist/v${version}/node-v${version}-win-x64.zip",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "windows", "arch": "x86_64"}]
    	},
		{
			"url": "https://nodejs.org/dist/v${version}/node-v${version}-darwin-x64.tar.gz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "macos", "arch": "x86_64"}]
		}
	],
	"environment_variables": [
		{"name": "PATH", "relative_path": "${version}/node-v${version}-linux-x64/bin", "platform_filters": [{"os": "linux", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/node-v${version}-win-x64", "platform_filters": [{"os": "windows", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/node-v${version}-darwin-x64/bin", "platform_filters": [{"os": "macos", "arch": "x86_64"}]}
	]
}
