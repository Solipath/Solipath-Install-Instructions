{
	"downloads": [
		{
			"url": "https://github.com/oneclick/rubyinstaller2/releases/download/RubyInstaller-3.0.2-1/rubyinstaller-3.0.2-1-x64.7z",
			"destination_directory": "3.0.2",
			"platform_filters": [{"os": "windows", "arch": "x86_64"}]
    		},
		{
			"url": "https://cache.ruby-lang.org/pub/ruby/3.0/ruby-3.0.2.tar.gz",
			"destination_directory": "3.0.2",
			"platform_filters": [
				{"os": "macos"},
				{"os": "linux"}
			]
    		}
	],
	"environment_variables": [
		{
			"name": "PATH", 
			"relative_path": "3.0.2/rubyinstaller-3.0.2-1-x64/bin", 
			"platform_filters": [{"os": "windows", "arch": "x86_64"}]
		},
		{
			"name": "PATH", 
			"relative_path": "3.0.2/ruby/bin", 
			"platform_filters": [
				{"os": "macos"},
				{"os": "linux"}
			]
		}
	],
	"install_commands": [
		{
			"command": "cd 3.0.2/ruby-3.0.2 && ./configure --prefix=\"${PWD}/../ruby\" && make && make install",
			"when_to_run_rules": {"file_does_not_exist": "3.0.2/ruby"},
			"platform_filters": [
				{"os": "macos"},
				{"os": "linux"}
			]
		}
	]
}
