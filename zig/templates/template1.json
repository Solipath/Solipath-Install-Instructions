{
	"downloads": [
		{
			"url": "https://ziglang.org/download/${version}/zig-linux-x86_64-${version}.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "linux", "arch": "x86_64"}]
		},
		{
			"url": "https://ziglang.org/download/${version}/zig-linux-aarch64-${version}.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "linux", "arch": "aarch64"}]
		},
		{
			"url": "https://ziglang.org/download/${version}/zig-windows-x86_64-${version}.zip",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "windows", "arch": "x86_64"}]
		},
		{
			"url": "https://ziglang.org/download/${version}/zig-macos-x86_64-${version}.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "macos", "arch": "x86_64"}]
		},
		{
			"url": "https://ziglang.org/download/${version}/zig-macos-aarch64-${version}.tar.xz",
			"destination_directory": "${version}",
			"platform_filters": [{"os": "macos", "arch": "aarch64"}]
		}
	],
	"environment_variables": [
		{"name": "PATH", "relative_path": "${version}/zig-linux-x86_64-${version}", "platform_filters": [{"os": "linux", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/zig-linux-aarch64-${version}", "platform_filters": [{"os": "linux", "arch": "aarch64"}]},
		{"name": "PATH", "relative_path": "${version}/zig-windows-x86_64-${version}", "platform_filters": [{"os": "windows", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/zig-macos-x86_64-${version}", "platform_filters": [{"os": "macos", "arch": "x86_64"}]},
		{"name": "PATH", "relative_path": "${version}/zig-macos-aarch64-${version}", "platform_filters": [{"os": "macos", "arch": "aarch64"}]}
	]
}
